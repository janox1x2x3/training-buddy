<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"  >
	<RelativeLayout 
	    android:id="@+id/DayLogTableLayoutItem"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	        
	        <TableLayout             
	            android:id="@+id/activityDetailsTableLayout"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:stretchColumns="2">
			    <TableRow 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
						android:id="@+id/sportTypeDayLog"
						android:text="Canoe Slalom"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						style="@style/EditText"/>
				    <TextView 
				        android:id="@+id/id_activity"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:textSize="0sp"/>
				    
				    <TextView 
					    android:id="@+id/activityTimeDayLog"
				        android:text="11:09"
				        android:gravity="right"
				        android:textColor="#ffffff"
						style="@style/EditText"/>
				    
				</TableRow>
			    <View 
			        android:layout_height="1dp"
			        android:layout_width="fill_parent"
			        android:background="#33B5E5"/>
			    
			    <TableRow 
			        android:id="@+id/totalTimeRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Total Time:"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"/>
					<TextView 
					    android:id="@+id/activityTotalTimeDayLog"
				        android:textColor="#ffffff"	        
						style="@style/SubText"/>
			    </TableRow>
			   	<TableRow 
			        android:id="@+id/distanceRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Distance:"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"/>
					<TextView 
					    android:id="@+id/DistanceDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"/>
			    </TableRow>
			    <TableRow 
			        android:id="@+id/totalClimbRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Total climb:"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"/>
					<TextView 
					    android:id="@+id/altitudeDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"/>
			    </TableRow>
			    <TableRow 
			        android:id="@+id/speedRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Speed:"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"/>
					<TextView 
					    android:id="@+id/speedDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"/>
			    </TableRow>
			    <TableRow 
			        android:id="@+id/paceRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Pace:"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"/>
					<TextView 
					    android:id="@+id/paceDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"/>
			    </TableRow>
			    <TableRow 
			        android:id="@+id/detailsTitleRow"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content">
				    <TextView 
				        android:text="Activity Details:"
				        style="@style/DayLogSubText"
				        android:textColor="#177BBD"/>
			    </TableRow>
				<LinearLayout 
				    android:id="@+id/detailsHRlayout"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:weightSum="4">
				    <TextView 
				        android:id="@+id/avgHrTitle"
				        android:text="avgHR"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"
				        android:layout_weight="1"/>
					<TextView 
					    android:id="@+id/avgHRDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"
				        android:layout_weight="1"/>
					<TextView 
				        android:id="@+id/maxHrTitle"
				        android:text="maxHR"
				        style="@style/DayLogSubText"
				        android:textColor="#ffffff"
				        android:layout_weight="1"/>
					<TextView 
					    android:id="@+id/maxHRDayLog"
				        android:textColor="#ffffff"
						style="@style/SubText"
				        android:layout_weight="1"/>
				</LinearLayout>
	
		</TableLayout>
		
	        <ImageView 
	            android:id="@+id/training_icon"
	            android:layout_width="75dp"
	            android:layout_height="60dp"
	            android:scaleType="fitXY"
	            android:layout_marginRight="8dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="40dp" />
		
	        <LinearLayout 
	            android:id="@+id/activityDaylogItemEditIconsLayout"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/training_icon"
	            android:layout_marginRight="8dp"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true">
			
	            <ImageView 
		            android:id="@+id/editIcon"
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:layout_marginRight="10dp"
		            android:background="@drawable/pressed_sel"
		            android:src="@android:drawable/ic_menu_manage"/>
	            
				<ImageView 
		            android:id="@+id/deleteIcon"
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:background="@drawable/pressed_sel"
		            android:src="@android:drawable/ic_menu_close_clear_cancel"/>				

			</LinearLayout>
			
	        	<TextView 
				    android:id="@+id/activityDetailsDayLog"
	        	    android:layout_height="wrap_content"
	        	    android:layout_width="fill_parent"
				    android:textColor="#ffffff"
				    android:layout_toLeftOf="@id/activityDaylogItemEditIconsLayout"
				    android:layout_below="@id/activityDetailsTableLayout"
				    style="@style/SubText"/>
		
	</RelativeLayout>
			<View 
			    android:layout_width="fill_parent"
			    android:layout_height="5dp" />
</LinearLayout>
