<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="text_color">#31D1F1</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="light_gray">#E8E8E8</color>
    <color name="pressed">#20ffffff</color>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SubTitleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MonthText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#177BBD</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeekDay">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SubText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TotalsMonthText">
        
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DayLogSubText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#177BBD</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateTitleText">
        <item name="android:textColor">#177BBD</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeekItemTitleText">
        <item name="android:textColor">#177BBD</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeekSubText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Tabulator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#33B5E5</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="creatixBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="blue_size17">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="blue_size20">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>